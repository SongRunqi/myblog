---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<div class="header-content">
		<h1>{SITE_TITLE}</h1>
		<nav>
			<HeaderLink href="/">首页</HeaderLink>
			<HeaderLink href="/java">Java</HeaderLink>
			<HeaderLink href="/springboot">SpringBoot</HeaderLink>
			<HeaderLink href="/about">关于</HeaderLink>
			<HeaderLink href="https://x.com/songyitian004" target="_blank">Twitter</HeaderLink>
			<HeaderLink href="https://github.com/SongRunqi" target="_blank">GitHub</HeaderLink>
		</nav>
	</div>
</header>

<style>
	header {
		background-color: #ffffff;
		box-shadow: 0 2px 8px rgba(0,0,0,0.1);
		position: sticky;
		top: 0;
		z-index: 1000;
		padding: 1rem 0;
	}
	.header-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	h1 {
		margin: 0;
		font-size: 1.5rem;
		font-weight: 700;
		color: #333;
	}
	nav {
		display: flex;
		gap: 1.5rem;
	}
	nav :global(a) {
		color: #555;
		text-decoration: none;
		font-weight: 500;
		font-size: 1rem;
		transition: color 0.3s ease;
	}
	nav :global(a:hover),
	nav :global(a.active) {
		color: #007bff;
	}
	@media (max-width: 768px) {
		.header-content {
			flex-direction: column;
			align-items: flex-start;
		}
		nav {
			margin-top: 1rem;
			flex-wrap: wrap;
		}
	}
</style>
