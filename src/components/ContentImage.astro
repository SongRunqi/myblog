---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
}

const { src, alt, width = 800, height = 600 } = Astro.props;
---

<div class="image-container">
  <img src={src} alt={alt} width={width} height={height} />
</div>

<style>
  .image-container {
    margin: 2rem 0;
    text-align: center;
  }
  
  img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
</style> 